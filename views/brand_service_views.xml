<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_brand_service_form" model="ir.ui.view">
        <field name="name">brand.service.form</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                            <field name="service_type"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="technician_id"/>
                            <field name="location"/>
                            <field name="serial_number"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_brand_service_list" model="ir.ui.view">
        <field name="name">brand.service.list</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
                <field name="service_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_service" model="ir.actions.act_window">
        <field name="name">Brand Services</field>
        <field name="res_model">brand.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_brand_service_root"
        name="Brand Services"
        sequence="10"/>

    <menuitem 
        id="menu_brand_service"
        name="Services"
        parent="menu_brand_service_root"
        action="action_brand_service"
        sequence="1"/>
</odoo>