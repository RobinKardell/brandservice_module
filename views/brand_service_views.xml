<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_brand_service_tree" model="ir.ui.view">
        <field name="name">brand.service.list</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
                <field name="action"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_brand_service_form" model="ir.ui.view">
        <field name="name">brand.service.form</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="reference"/>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="location"/>
                            <field name="action"/>
                            <field name="technician_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_brand_service_search" model="ir.ui.view">
        <field name="name">brand.service.search</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_service" model="ir.actions.act_window">
        <field name="name">Brand Services</field>
        <field name="res_model">brand.service</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_brand_service_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first brand service!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_brand_service_root"
        name="Brand Services"
        sequence="10"/>

    <menuitem 
        id="menu_brand_service"
        name="Services"
        parent="menu_brand_service_root"
        action="action_brand_service"
        sequence="1"/>

</odoo>