<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_brand_service_form" model="ir.ui.view">
        <field name="name">brand.service.form</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="product_id"/>
                        <field name="date"/>
                        <field name="service_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_brand_service_tree" model="ir.ui.view">
        <field name="name">brand.service.tree</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_service" model="ir.actions.act_window">
        <field name="name">Brand Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">brand.service</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_brand_service_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_brand_service_form')})]"/>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_brand_service_root"
        name="Brand Services"
        sequence="10"/>

    <menuitem 
        id="menu_brand_service"
        name="Services"
        parent="menu_brand_service_root"
        action="action_brand_service"
        sequence="1"/>

</odoo>