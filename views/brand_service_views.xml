<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_brand_service_form" model="ir.ui.view">
        <field name="name">brand.service.form</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="location"/>
                            <field name="action"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree/List View -->
    <record id="view_brand_service_tree" model="ir.ui.view">
        <field name="name">brand.service.tree</field>
        <field name="model">brand.service</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Brand Services">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_service" model="ir.actions.act_window">
        <field name="name">Brand Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">brand.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first brand service!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_brand_service_root"
        name="Brand Services"
        sequence="10"/>

    <menuitem 
        id="menu_brand_service"
        name="Services"
        parent="menu_brand_service_root"
        action="action_brand_service"
        sequence="1"/>
</odoo>