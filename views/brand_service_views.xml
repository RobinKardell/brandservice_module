<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_brand_service_form" model="ir.ui.view">
        <field name="name">brand.service.form</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="location"/>
                            <field name="action"/>
                            <field name="technician_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_brand_service_tree" model="ir.ui.view">
        <field name="name">brand.service.tree</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_brand_service_search" model="ir.ui.view">
        <field name="name">brand.service.search</field>
        <field name="model">brand.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer" context="{'group_by':'customer_id'}"/>
                    <filter string="Product" name="product" context="{'group_by':'product_id'}"/>
                    <filter string="Month" name="month" context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_brand_service" model="ir.actions.act_window">
        <field name="name">Brand Services</field>
        <field name="res_model">brand.service</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_brand_service_search"/>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_brand_service_root"
        name="Brand Services"
        sequence="10"/>

    <menuitem 
        id="menu_brand_service"
        name="Services"
        parent="menu_brand_service_root"
        action="action_brand_service"
        sequence="1"/>

</odoo>